@model List<EditRoleDTO>

@{ 
    ViewData["Title"] = "Zarzadzaj rolami";
} 

<form asp-route-userId="@ViewData["userId"]" method="post">
    @for(int i = 0; i < Model.Count; i++)
    {
        <div class="row">
            <input class="form-control col-sm-6" asp-for="@Model[i].RoleName" readonly />
            <input class="form-control col-sm-6" asp-for="@Model[i].IsChosen" />
        </div>
    }
    <input type="submit" value="Edytuj" class="btn btn-success" />
</form>